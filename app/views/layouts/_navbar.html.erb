<div class="container mx-auto px-5 flex justify-between items-center">
  <div class="flex items-center space-x-6">
    <%= link_to "Photohost", root_path, class: "text-2xl font-bold text-blue-600" %>
    <%= link_to "Albums", albums_path, class: "text-gray-700 hover:text-blue-600 font-semibold" %>
    <%= link_to "Photos", photos_path, class: "text-gray-700 hover:text-blue-600 font-semibold" %>
    <% if user_signed_in? %>
      <%= link_to "My profile", edit_user_registration_path, class: "text-gray-700 hover:text-blue-600 font-semibold" %>
    <% end %>
  </div>
  <div>
    <% if user_signed_in? %>
      <span class="mr-4 text-gray-600">Hello, <%= current_user.email %></span>
      <%= link_to "Log out", destroy_user_session_path, class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 font-semibold", data: { turbo_method: :delete } %>
    <% else %>
      <%= link_to "Log in", new_user_session_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 font-semibold" %>
    <% end %>
  </div>
</div>
