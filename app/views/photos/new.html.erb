<h1 class="text-3xl font-bold mb-8">Upload New Photo</h1>

<%= form_with(model: @photo, url: photos_path, local: true, html: { multipart: true, class: "max-w-lg mx-auto bg-white p-8 rounded-lg shadow-md" }) do |form| %>
  <div class="mb-4">
    <%= form.label :title, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :title, class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" %>
  </div>
  <div class="mb-4">
    <%= form.label :description, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_area :description, rows: 3, class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" %>
  </div>
  <div class="mb-6">
    <%= form.label :image, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.file_field :image, class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" %>
  </div>
  <div class="flex justify-between items-center">
    <%= form.submit "Upload Photo", class: "bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 font-semibold" %>
    <%= link_to "Back to Photos", photos_path, class: "text-blue-600 hover:underline" %>
  </div>
<% end %>
