<h1 class="text-3xl font-bold mb-8">Upload Photos</h1>
<%= form_with(model: PhotoUploader.new, url: photos_path, local: true, html: { multipart: true, class: "max-w-lg mx-auto bg-white p-8 rounded-lg shadow-md" }) do |form| %>
  <div class="mb-6">
    <%= form.label :images, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.file_field :images, multiple: true, class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" %>
  </div>
  <div class="flex justify-between items-center">
    <%= form.submit "Upload", class: "bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 font-semibold" %>
  </div>
<% end %>

